<h1>Articles</h1>

<ul id="articles">

  <% @articles.order_options.each do |option| %>
    <%= link_to option.titleize, articles_path(order_by: option) %>
  <% end %>

  <%= render articles_template(@articles) %>

</ul>

<% if logged_in? %>
<%= link_to "Create Article", new_article_path, class: "new_article" %>
<% end %>