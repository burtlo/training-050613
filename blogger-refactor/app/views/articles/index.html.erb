<h1>Articles</h1>

<ul id="articles">

<% @order_options.each do |option| %>
  <%= link_to option.titleize, articles_path(order_by: option) %>
<% end %>

<% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article) %>
  </li>
<% end %>
</ul>

<% if logged_in? %>
<%= link_to "Create Article", new_article_path, class: "new_article" %>
<% end %>